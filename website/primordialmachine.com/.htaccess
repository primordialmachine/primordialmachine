#######################################################################
# Disable display of PHP errors.
#######################################################################
php_flag display_startup_errors on
php_flag display_errors on

#######################################################################
# Disable directory browsing for this directory and all subdirectories.
#######################################################################
Options -Indexes

#######################################################################
# Disable access to this .htaccess file.
#######################################################################
<Files .htaccess>

order allow,deny

deny from all

</Files>

#######################################################################
# TODO: Uncomment once proper error documents are in place.
#######################################################################
# ErrorDocument 400 /errors/400.html
# ErrorDocument 401 /errors/401.html
# ErrorDocument 403 /errors/403.html
# ErrorDocument 404 /errors/404.html
# ErrorDocument 500 /errors/500.html

# Disable directory slashes.
DirectorySlash Off

#Disable Directory Listing
Options -Indexes

Options +FollowSymLinks

RewriteEngine on

###################################################
RewriteCond %{REQUEST_FILENAME} -f
RewriteCond %{REQUEST_FILENAME} (core.php)
RewriteRule ^(.*)$ /index.php?$1 [NC,L,QSA]

RewriteCond %{REQUEST_FILENAME} -d
RewriteCond %{REQUEST_FILENAME} (core)
RewriteRule ^(.*)$ /index.php?$1 [NC,L,QSA]

